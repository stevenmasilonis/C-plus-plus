#include <iostream>

using namespace std;

int main()

    {
    double creditCount;
    double creditCountSemester = 0;
    double cumGPA;
    char answer;
    double creditHours;
    char decision = '1';
    string grade;
    double credit;
    double creditHourstotal = 0;
     cout << "Input total OSU credits completed";
     cin >> creditCount;
     cout << "Input cumulative GPA";
     cin >> cumGPA;
     double creditCountTotal = cumGPA * creditCount;
     cout << "What would you like to do?\n";
     cout << "Calculate semester GPA and new cumulative type in '1'\n";
     cout << "Calculate minimum GPA needed type in '2'\n";
     cin >> answer;
     if (answer == '1') {
         cout << "Enter your classes one by one\n";
         cout << "Starting with credit hours of said class\n";
         while (decision == '1') {
             cout << "Enter credit hours:";
             cin >> creditHours;
             creditHourstotal = creditHourstotal + creditHours;
             //creditCountSemester = creditCountSemester + creditHours;
             cout << "Enter grade";
             cin >> grade;
             char letterGrade = grade[0];
             char sign = grade[1];
             switch(letterGrade) {
                 case 'A': {
                     switch(sign) {
                         case '+': {
                            credit = 4; 
                            break;
                         }
                         case '-': {
                             credit = 3.7;
                             break;
                         }
                         case '\0': {
                             credit = 4;
                         }
                     }
                    break;
                 }
                 case'B': {
                    switch(sign) {
                         case '+': {
                            credit = 3; 
                            break;
                         }
                         case '-': {
                             credit = 2.7;
                             break;
                         }
                         case '\0': {
                             credit = 3;
                             break;
                         }
                     }
                    break;
                 }
                 case 'C': {
                    switch(sign) {
                         case '+': {
                            credit = 2.3; 
                            break;
                         }
                         case '-': {
                             credit = 1.7;
                             break;
                         }
                         case '\0': {
                             credit = 2;
                             break;
                         }
                     }
                    break;
                 }
                 case 'D': {
                    switch(sign) {
                         case '+': {
                            credit = 1.3; 
                            break;
                         }
                         case '-': {
                             credit = 0.7;
                             break;
                         }
                         case '\0': {
                             credit = 1;
                             break;
                         }
                     }
                 case 'F': {
                    credit = 0; 
                    break;
                 }
                }
             }
                 creditCountSemester = creditCountSemester + credit * creditHours;
                 cout << "Enter '0' to indicate you have added all of your classes\n";
                 cout << "Otherwise enter anything\n";
                 cin >> decision;
         }
         }
         cout << creditCountSemester / creditHourstotal;
         creditCount = creditCount + creditHourstotal;
         creditCountTotal = creditCountSemester + creditCountTotal;
         cout << creditCountTotal / creditCountSemester;
     

    return 0;
         }
