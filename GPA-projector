

#include <iostream>

using namespace std;
double getGrade(string input);
int main()

    {
        double creditEarned, cumGPA, grade, creditHours, gradeXhours, newGPA;
        string s;
        bool yesOrno = true;
        cout << "How many credits have you completed at osu\n";
        cin >> creditEarned;
        cout << "Enter cumulative gpa\n";
        cin >> cumGPA;
        gradeXhours = cumGPA * creditEarned;
        
        while (yesOrno == true) {
            cout << "Enter class grade\n";
            cin >> s;
            grade = getGrade(s);
            cout << "Enter this class's credit hours\n";
            cin >> creditHours;
            
            gradeXhours = gradeXhours + grade * creditHours;
            creditEarned = creditEarned + creditHours;
            
            cout << "Enter 0 to stop";
            cin >> yesOrno;
            
        
        }
        
        newGPA = gradeXhours / creditEarned;
        cout << newGPA;
        
        
    return 0;
         }
         
    double getGrade(string grade) {
        double credit = 0;
        char letterGrade = grade[0];
             char sign = grade[1];
             switch(letterGrade) {
                 case 'A': {
                     switch(sign) {
                         case '-': {
                             credit = 3.7;
                             break;
                         }
                         case '\0': {
                             credit = 4;
                         }
                     }
                    break;
                 }
                 case'B': {
                    switch(sign) {
                         case '+': {
                            credit = 3.3; 
                            break;
                         }
                         case '-': {
                             credit = 2.7;
                             break;
                         }
                         case '\0': {
                             credit = 3;
                             break;
                         }
                     }
                    break;
                 }
                 case 'C': {
                    switch(sign) {
                         case '+': {
                            credit = 2.3; 
                            break;
                         }
                         case '-': {
                             credit = 1.7;
                             break;
                         }
                         case '\0': {
                             credit = 2;
                             break;
                         }
                     }
                    break;
                 }
                 case 'D': {
                    switch(sign) {
                         case '+': {
                            credit = 1.3; 
                            break;
                         }
                         case '\0': {
                             credit = 1;
                             break;
                         }
                     }
                 case 'F': {
                    credit = 0; 
                    break;
                 }
                }
             }
        return credit;
    }
